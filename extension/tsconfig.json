{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./debug/ts-compiled-to-js-by-tsc",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noImplicitAny": false,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["node_modules/web-ext-types", "node_modules/@types"]
  },
  "include": ["ts/**/*.ts", "ts/**/*.tsx"]
}
